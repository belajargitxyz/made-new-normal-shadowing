<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ImageView
            android:id="@+id/vrIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_vr_gaming"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/title_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/vrIcon"
            app:layout_constraintStart_toEndOf="@id/vrIcon"
            app:layout_constraintBottom_toBottomOf="@id/vrIcon"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="#9C9999"
            android:text="Main kok sendiri, sama istri lah"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Gallery Game"
            android:textColor="#575757"
            android:textSize="40sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/vrIcon"
            app:layout_constraintTop_toBottomOf="@id/vrIcon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGames"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/big_text" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rvGames"
            app:layout_constraintEnd_toEndOf="@id/rvGames"
            app:layout_constraintTop_toTopOf="@id/rvGames"
            app:layout_constraintBottom_toBottomOf="@id/rvGames"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>