<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemPoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_margin="4dp" />

    <ImageView
        android:id="@+id/icRating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@id/itemPoster"
        app:layout_constraintStart_toStartOf="@id/itemPoster"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:outlineProvider="bounds"/>

    <TextView
        android:id="@+id/itemRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        app:layout_constraintTop_toTopOf="@id/icRating"
        app:layout_constraintBottom_toBottomOf="@id/icRating"
        app:layout_constraintStart_toEndOf="@id/icRating"/>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GTA V"
        android:textStyle="bold"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:textSize="25sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/icRating"
        app:layout_constraintBottom_toTopOf="@id/icRating"/>

</androidx.constraintlayout.widget.ConstraintLayout>